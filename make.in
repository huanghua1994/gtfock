# make.in for compilation on KNL5
# use Intel MPI, i.e., "module load impi" to access mpiicc and mpiicpc

CC  = icc   
CXX = icpc  
FC  = ifort 
AR  = xiar rcs

MPICC  = mpiicc
MPICXX = mpiicpc

DYNAMIC     = 1
DO_SCF      = 0
SCF_TIMMING = 0
SCF_OUT     = 0

